{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node", // Changed from "bundler" to "node" for Lambda compatibility
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"], // Explicitly include Node.js types
    "paths": {
      "$amplify/*": [
        "../.amplify/generated/*"
      ]
    }
  }
}